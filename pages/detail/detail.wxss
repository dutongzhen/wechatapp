page {
  background-color: #efefef;
}
.header {
    background: #fff;
    height: 84rpx;
}
.header .logo {
    margin-top: 0.35rem;
    float: left;
    width: 150rpx;
    margin-left: 0.75rem;
}
.headerR {
    float: right;
    margin-right: 0.75rem;
    margin-top: .3rem;
}
.headerR a {
    line-height: 1.2rem;
    color: #00723a;
    font-size: 0.55rem;
}
.headerR image {
    width: 130rpx;
}
.banner {
    width: 100%;
    height: auto;
    text-align: center;
    padding: 15rpx 0rpx;
    background: #fff;
    border-top: 1px solid #efefef;
    border-bottom: 1px solid #efefef;
}
.banner .ban_h2 {
    font-size: 38rpx;
    color: #3d3d3d;
    font-weight: bolder;
}
.banner .area_info {
    padding: 8rpx 0rem 0rem;
    font-size: 26rpx;
}
.banner .area_info span{
    margin: 0 25rpx;
    display: inline-block;
}
.jiage {
    background: #fff;
    padding: .3rem .75rem .3rem;
    box-sizing: border-box;
    border-bottom: 1px solid #efefef;
}
.jiage .jiage_h3 {
    font-size: 30rpx;
    color: #3d3d3d;
    font-weight: bold;
}
.jiage span {
    color: #ff6e35;
    float: right;
}
.jiage p {
    color: #999;
    font-size: 24rpx;
    margin-top: .2rem;
}
.sheng {
    width: 1rem;
    margin-right: .38rem;
}
.zhuang {
    width: 2.5rem;
    margin-left: .3rem;
}
.shbj_new {
    background: #fff;
    margin-top: .1rem;
    box-sizing: border-box;
}
.txgift {
    padding: .35rem .5rem;
    box-sizing: border-box;
    background: #fff;
    margin: .1rem 0;
}
.txgift_tit {
    text-align: center;
}
.txgift_tit .txgift_tit_h {
    font-size: 30rpx;
    font-weight: bolder;
}
.txgift_tit .txgift_tit_h em {
    font-style: normal;
    color: #ff6e35;
}
.txgift_tit image {
    margin-top: -70rpx;
}
.rad_infoClass {
    padding-top: 0.2rem;
}
.footer {
    padding: .4rem 0px;
    background: #fff;
}